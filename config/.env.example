# API Configuration
API_KEY=your_api_key_here_optional

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
WHISPER_MODEL=small

# Pyannote Configuration
# Get your Hugging Face token from: https://huggingface.co/settings/tokens
HF_TOKEN=YOUR_HUGGINGFACE_TOKEN_HERE  # get from https://huggingface.co/settings/tokens and set in platform secrets

# Server Configuration
HOST=0.0.0.0
PORT=8888
MAX_FILE_SIZE=209715200  # 200MB in bytes

# Processing Configuration
MAX_SPEAKERS=10
MIN_SPEAKERS=1

# Cache Configuration
CACHE_DIR=/app/cache
UPLOAD_DIR=/app/uploads
